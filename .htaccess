RewriteEngine On

# 1. PERMITIR ACCESO DIRECTO A ARCHIVOS EXISTENTES
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. RUTAS PÚBLICAS ESPECÍFICAS (sin pasar por index.php)
RewriteRule ^cliente_api\.php$ - [L]
RewriteRule ^buscar_hoteles\.php$ - [L]
RewriteRule ^debug_busqueda\.php$ - [L]
RewriteRule ^api/public/ - [L]

# 3. RUTAS DEL SISTEMA MVC (pasan por index.php)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]